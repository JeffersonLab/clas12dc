#!/bin/bash

# Filename: clas12dc
# Description: Expert's mode for clas12dc calibration. This is intended for debugging purpose and to be used by the experts.
# Author: Latif Kabir < latif@jlab.org >
# Created: Sat Dec 30 02:15:54 2017 (-0500)
# URL: jlab.org/~latif

echo "          ---------------------------------------------------------------------------------"
echo "          |										  |"
echo "          |                  Welcome to DC Calibration Expert's Mode			  |"
echo "          |										  |"
echo "          ---------------------------------------------------------------------------------"


if [ "-h" == $1 ]
then
    echo "                   "
    echo "          Syntax: clas12dc <OPTION>"
    echo "                    "
    exit
fi


if [ $# -ne 1 ]
then
   echo "                   "		
   echo "          Syntax: clas12dc <OPTION>"
   echo "                   "			
   echo "          ------------------------------------- List of available options --------------------------------"
   echo "          tbhits     : Plot different variables from TBHits bank"
   echo "          t2d        : Compare time-to-distance function used in reconstruction and calibration suite"
   echo "          explorer   : Open Data Explorer GUI"
   echo "          getT0      : Estimate T0 correction"
   echo "          calib      : Open DC Calibration GUI" 
   echo "          dcmon      : Open DC monitoring GUI" 
   echo "          effi       : Open DC efficiency studies GUI" 
   echo "                    "
   exit
fi

OPTION=$1


case $OPTION in 
 "tbhits") java -cp  clas12lib.jar org.jlab.latif.clas12lib.dc.TBtrkingDist
  ;;
  "t2d")  java -cp  DC_Calibration.jar org.jlab.dc_calibration.benchmark.CompareT2DReconVsCalib
  ;;
  "explorer") java -jar DataExplorer.jar
  ;;
  "getT0") java -cp DC_Calibration.jar org.jlab.dc_calibration.benchmark.FitterForT0
  ;;
  "calib") java -jar DC_Calibration.jar
esac  
